<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:paddingTop="35dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        tools:context=".StoryActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/story_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:paddingTop="25dp"
                android:src="@drawable/kids_dog" />

        </RelativeLayout>

        <TextView
            android:id="@+id/story_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="45dp"
            android:paddingTop="30dp"
            android:paddingEnd="45dp"
            android:paddingBottom="20dp"
            android:text="Il était une fois trois enfants curieux qui partirent à l'aventure dans la forêt enchantée. Ils découvrirent une clairière magique où les arbres chantaient et les animaux dansaient. Fascinés, ils se joignirent à la fête, riant et jouant jusqu'au coucher du soleil."
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </LinearLayout>